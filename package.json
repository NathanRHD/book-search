    "typeorm": "^0.2.25",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.17.0",
    "@types/node": "^14.0.13",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^7.14.3",
    "@types/react": "^16.7.0-alpha.2",
    "@types/react-dom": "^16.0.11",
    "@types/react-helmet": "^5.0.10",
