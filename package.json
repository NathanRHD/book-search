{
  "name": "book-search",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "13.3.0"
  },
  "scripts": {
    "webpack": "webpack --mode development --config ./webpack-client.config.js && webpack --mode development --config ./webpack-server.config.js",
    "build": "npm run webpack && cp distribution/web.js static/scripts/bundle.js && cp distribution/web.css static/styling/main.css",
    "serve": "node distribution/server.js",
    "start": "node distribution/server.js",
    "start:dev": "node -r dotenv/config distribution/server.js",
    "generate-sdk": "ts-node source/api/generate-sdk.ts",
    "db-restore:prod": "heroku pg:push nathans-books DATABASE_URL --app nathans-books",
    "db-dump:dev": "pg_dump -Fc --no-acl --no-owner -h localhost -U nathanrussell nathans-books > nathans-books.dump"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NathanRussellUK/book-search.git"
  },
  "author": "",
  "license": "ISC",
