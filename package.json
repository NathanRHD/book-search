    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "captchagen": "^1.2.0",
    "nodemailer": "^6.4.8",
    "pg": "^8.2.1",
    "pg-native": "^3.0.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-helmet": "^5.2.1",
    "react-redux": "^5.0.7",
    "react-router": "^3",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
